<div>
  <div>
    <h1>
     <%= @the_board.name %>
    </h1>
  </div>
</div>

<hr>

<h2> Add a new post </h2>
<form action="/insert_post" method="post">
  <div>
    <label for="title_box"> Title </label>
    <input id="title_box" name="query_title" type="text">
    </div>

  <div>
    <label for="body_box"> Body </label>
    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>

  <div>
    <label for="expires_on_box"> Expires on </label>
    <input id="expires_on_box" name="query_expires_on" type="date">
  </div>
  <div>
    <button> Add post </button>
  </div>

</form>

<hr>

<h2> Active posts </h2>
<table border ="1">
  <tbody>
    <tr>
      <th>
        Title
      </th>
      <th>
        Body
      </th>
      <th>
        Posted on
      </th>
      <th>
        Expires on
      </th>
    </tr>
    <% @the_board.posts.each do |a_post|%>
    <tr>
      <td> 
        <%= a_post.title %>
      </td>
      <td>
        <%= a_post.body %>
      </td>
      <td>
        <%= a_post.created_at %>
      </td>
      <td>
        <%= a_post.expires_on %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2> Expired posts </h2>
<table border="1"> 
  <tbody>
    <tr>
      <th>
        Title
      </th>
      <th>
        Body
      </th>
      <th>
        Posted on
      </th>
      <th>
        Expired on
      </th>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
